#include <windows.h>
#include "resource.h"

IDD_MODE_SELECTION DIALOGEX 0, 0, 200, 120
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
EXSTYLE WS_EX_WINDOWEDGE
CAPTION "Select Game Mode"
FONT 10, "Segoe UI"
BEGIN
    PUSHBUTTON "Single Player", IDC_SINGLE_PLAYER, 50, 30, 100, 20
    PUSHBUTTON "Multiplayer",    IDC_MULTIPLAYER,   50, 60, 100, 20
END

IDD_DIFFICULTY_SELECTION DIALOGEX 0, 0, 220, 120
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Select Difficulty"
FONT 8, "MS Sans Serif"
BEGIN
    DEFPUSHBUTTON   "Easy (3x3)",     IDC_EASY,   20, 20, 70, 20
    PUSHBUTTON      "Medium (4x4)",   IDC_MEDIUM, 20, 50, 70, 20
    PUSHBUTTON      "Hard (5x5)",     IDC_HARD,   20, 80, 70, 20
END

IDD_PLAYER_NAMES DIALOGEX 0, 0, 200, 120
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Enter Player Names"
BEGIN
    LTEXT "Player 1:", -1, 10, 10, 60, 10
    EDITTEXT IDC_PLAYER1NAME, 80, 10, 100, 14, ES_AUTOHSCROLL

    LTEXT "Player 2:", -1, 10, 40, 60, 10
    EDITTEXT IDC_PLAYER2NAME, 80, 40, 100, 14, ES_AUTOHSCROLL

    DEFPUSHBUTTON "OK", IDOK, 40, 80, 50, 14
    PUSHBUTTON "Cancel", IDCANCEL, 110, 80, 50, 14
END
